BEGIN	{
	mac = "" # all MAC Addresses are stored in this string
	ip = ""  # all IP Addresses are stored in this string
}


/^[ \t]*hardware[ \t\n]+ethernet[ \t\n]+[0-9a-zA-Z:]+;/	{
	sub (/;/, "", $3) # rm semicolon
	mac = mac " " $3
}


/^[ \t]*fixed-address[ \t\n]+[0-9a-zA-Z._-]+[ \t\n]*;/	{
	sub (/;/, "", $2) # rm semicolon
	ip = ip " " $2
}


END	{
	len = split (mac, MAC, " ")
	split (ip, IP, " ")

	for (i = 1; i <= len; ++i)
		print MAC[i], IP[i]
}
