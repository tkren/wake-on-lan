@AWK@ '

BEGIN	{
	mac = "" # all MAC Addresses are stored in this string
	ip = ""  # all IP Addresses are stored in this string
}


/^[^#]+[ \n\t\\a-zA-Z0-9:]+:ha=0x[0-9a-fA-F]+/	{
	i = match ($0, "ha=0x[0-9a-fA-F]+")
	macc = substr ($0, i + 5, 12)
	maco = ""
	for (i = 1; i < 10; i += 2)
		maco = maco "" substr (macc, i, 2) ":"
	
	maco = maco "" substr (macc, i, 2)
	
	mac = mac " " maco
}


/^[^#]+[ \n\t\\a-zA-Z0-9:]+:ip=[0-9.-_a-zA-Z]+/	{
	i = match ($0, "ip=[0-9.-_a-zA-Z]+")
	ipc = substr ($0, i + 3, RLENGTH)
	i = match (ipc, ":")
	ipo = substr (ipc, 1, i - 1)
	ip = ip " " ipo
}


END	{
	len = split (mac, MAC, " ")
	split (ip, IP, " ")

	for (i = 1; i <= len; ++i)
		print MAC[i], IP[i]
}'
